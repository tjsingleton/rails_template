<% title "Login" %>

<% semantic_form_for :user_session do |f| %>
  <% f.inputs do %>
    <%= f.input :email %>
    <%= f.input :password %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button "Login" %>
    <%= f.check_box :remember_me %><%= f.label :remember_me %>
  <% end %>
  <p><%= link_to "Forgot your password?", url_for(:controller => "password_resets", :action => "new", :email => @email) %></p>
<% end %>
